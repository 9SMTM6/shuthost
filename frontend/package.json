{
    "name": "shuthost-frontend",
    "private": true,
    "version": "1.0.0",
    "scripts": {
        "build": "npm ci && cd assets && tsc --outDir ./generated && npx @tailwindcss/cli -i ./styles.tailwind.css -o ./generated/styles.css",
        "test": "npm ci && tsc --noEmit && playwright test",
        "install-chromium": "playwright install chromium",
        "install-chromium-ci": "playwright install chromium --with-deps"
    },
    "dependencies": {
        "@tailwindcss/cli": "^4.1.8",
        "tailwindcss": "^4.1.8",
        "typescript": "^5.8.3"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.10.2",
        "@playwright/test": "^1.43.0",
        "@types/node": "^24.7.0"
    }
}
