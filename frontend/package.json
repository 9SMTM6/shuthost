{
    "name": "shuthost-frontend",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "npm run build:tsc && npm run build:tailwind",
        "build:tsc": "cd assets && tsc --outDir ./generated",
        "build:tailwind": "cd assets && npx @tailwindcss/cli -i ./styles.tailwind.css -o ./generated/styles.css --minify",
        "build:diagrams": "tsc --noEmit build-diagrams.ts && node build-diagrams.ts",
        "test": "tsc --noEmit && playwright test",
        "install-chromium": "playwright install chromium",
        "install-chromium-ci": "playwright install chromium --with-deps",
        "generate-npm-licenses": "license-checker-rseidelsohn --json > assets/generated/npm-licenses.json"
    },
    "dependencies": {
        "@tailwindcss/cli": "^4.1.8",
        "tailwindcss": "^4.1.8",
        "typescript": "^5.8.3"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.10.2",
        "@mermaid-js/mermaid-cli": "^11.12.0",
        "@playwright/test": "^1.43.0",
        "@types/node": "25.x",
        "license-checker-rseidelsohn": "^4.4.2"
    }
}
