digraph DirectControl {
  rankdir=TB;
  // Prefer Inter for generated diagrams to avoid serif fallbacks.
  node [shape=ellipse, fontname="Inter"];
  edge [fontname="Inter"];

  script [label="Direct Control\n(Script)"];
  host [label="Host"];
  agent [label="Agent\n1 per host"];

  // Relationships
  host -> agent [label="starts agent service\n(on host boot)"];

  // Direct control interactions
  script -> host [label="WOL\nstartup"];
  script -> agent [label="ask status/\nshutdown"];
  agent -> host [label="executes\nshutdown"];
}
